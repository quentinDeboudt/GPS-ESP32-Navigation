<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_navigation_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        map:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            map:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etDestination"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:autofillHints="enter your destination"
                android:hint="@string/destination"
                android:inputType="text"
                android:padding="16dp"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/searchNavigationButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/search"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/layout_input" />
        </LinearLayout>

        <!-- 3. Spinner de transport -->
        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            map:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/transport_spinner"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- 1. La carte OSMdroid -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/layout_instruction"
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_black_background"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        map:layout_constraintTop_toTopOf="parent">

        <!-- ImageView pour la flÃ¨che -->
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/image"
            android:background="@drawable/rounded_white_background"/>

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/instruction"
            android:textSize="18sp"
            android:padding="16dp"
            android:color="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bouton pour lancer la navigation -->
    <Button
        android:id="@+id/btnStartNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lancer_la_navigation"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:elevation="6dp" />

    <!-- 2. Bouton pour lancer la navigation -->
    <Button
        android:id="@+id/btnFinishNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arreter_la_navigation"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:elevation="6dp" />

</FrameLayout>
